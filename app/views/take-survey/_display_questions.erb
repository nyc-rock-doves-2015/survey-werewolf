<form method="POST" name="questions">
  <h1><%= @survey.title %></h1>

  <% @questions.each do |question| %>
  <h3><%= question.question_desc %></h3>
    <%question.answers.each do |answer|%>
    <div class="button-group">
      <label>
        <input type="radio" name="question[<%= question.question_desc %>]" value="<%= answer.answer_text %>">
        <span class="button-group-item"><%= answer.answer_text %></span>
      </label>
    </div>
    <br>
        <br>
    <br>

    <% end %>
  <% end %>
  <input type="submit">
</form>
