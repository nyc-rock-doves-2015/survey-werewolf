<form method="POST" action="">
  <label>Question</label>
    <input type="text" name="question">
  <label>Answer Type</label>
    <select class="select-answer-type">
      <option value="radio">Choose One</option>
      <option value="checkbox">Choose Many</option>
    </select>
  <div class="answer-option-container">
    <%= erb :'/make-survey/_answer-option' %>
  </div>

  <input type="submit" name="next" value="submit and continue">
  <input type="submit" name="done" value="submit and finish">
</form>


